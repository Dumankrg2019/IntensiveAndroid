<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ru.androidschool.intensiv.ui.movie_details.MovieDetailsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="ru.androidschool.intensiv.ui.movie_details.MovieDetailsFragment"
        android:background="@color/blueDark"
        >
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/mainFeedBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <FrameLayout
            android:id="@+id/frPoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_poster_movie"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:shapeAppearance="@style/CornerSizeOfBottom5Percent"
                app:srcCompat="@drawable/auamenposter" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image_poster_movie" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvNameOfMovie"
            style="@style/DefaultMiddleSizeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frPoster"
            android:layout_alignEnd="@id/chbLike"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="15dp"
            android:text="@string/defaultMovieName" />

        <CheckBox
            android:id="@+id/chbLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frPoster"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            android:button="@drawable/like_selector"
            android:clickable="true"
            android:focusable="true"
            android:text=""
            tools:text="" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnWatch"
            style="@style/DefaultTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameOfMovie"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_btn_watch"
            android:text="@string/btnWatchTitle"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/tvMovieRating"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameOfMovie"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="end"
            android:isIndicator="true"
            android:numStars="10"
            android:progressBackgroundTint="@color/colorControlNormal"
            android:stepSize="1"
            tools:rating="6" />

        <TextView
            android:id="@+id/tvAboutMovie"
            style="@style/DefaultTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnWatch"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:text="@string/defaultTextAboutMovie" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvActorsOfTheMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAboutMovie"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_actor" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titleStudioMovieName"
            android:layout_marginEnd="15dp"
            style="@style/DefaultTextStyle"
            android:layout_below="@id/rvActorsOfTheMovie"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titletMovieJenre"
            android:layout_marginEnd="15dp"
            style="@style/DefaultTextStyle"
            android:layout_below="@id/textView2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titletYearOfMovie"
            android:layout_marginEnd="15dp"
            style="@style/DefaultTextStyle"
            android:layout_below="@id/textView3"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/tvStudioName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvActorsOfTheMovie"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/textView2"
            android:text="@string/defaultMovieName"
            style="@style/DefaultTextStyle"
            android:layout_marginStart="12dp"/>
        <TextView
            android:id="@+id/tvGenreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DefaultTextStyle"
            android:text="@string/defaultMovieJenreoName"
            android:layout_toEndOf="@id/textView2"
            android:layout_below="@id/tvStudioName"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/tvYearMovieMade"
            style="@style/DefaultTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvGenreName"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/textView2"
            android:text="@string/defaultYearOfMovie" />

        <ProgressBar
            android:id="@+id/pbDetailMovie"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</ScrollView>